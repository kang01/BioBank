<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity EquipmentModle.
    -->
    <changeSet id="20170316065053-1" author="jhipster">
        <createTable tableName="equipment_modle" remarks="设备型号表">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="equipment_model_code" type="varchar(100)" remarks = "设备型号编码" >
                <constraints nullable="false" />
            </column>

            <column name="equipment_model_name" type="varchar(255)" remarks = "设备型号名称">
                <constraints nullable="false" />
            </column>

            <column name="equipment_type" type="varchar(20)" remarks = "设备类型：冰箱，液氮罐">
                <constraints nullable="false" />
            </column>

            <column name="area_number" type="integer" remarks = "区域数量">
                <constraints nullable="false" />
            </column>

            <column name="shelve_number_in_area" type="integer" remarks = "区域内架子数量">
                <constraints nullable="false" />
            </column>

            <column name="temperature_max" type="integer" remarks = "最高温度值">
                <constraints nullable="true" />
            </column>

            <column name="temperature_min" type="integer" remarks = "最低温度值">
                <constraints nullable="true" />
            </column>

            <column name="memo" type="varchar(255)" remarks = "备注">
                <constraints nullable="true" />
            </column>

            <column name="status" type="varchar(20)" remarks = "状态">
                <constraints nullable="false" />
            </column>

            <column name="created_by" type="varchar(50)" remarks = "创建人">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}" remarks = "创建时间">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" remarks = "修改人"/>
            <column name="last_modified_date" type="timestamp" remarks = "修改时间"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>
