<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity FrozenBox.
    -->
    <changeSet id="20170317062302-1" author="jhipster">
        <createTable tableName="frozen_box">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="frozen_box_code" type="varchar(100)">
                <constraints nullable="false"  unique = "true" />
            </column>

            <column name="frozen_box_type_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="frozen_box_rows" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="frozen_box_columns" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="project_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="project_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="project_site_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="project_site_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="equipment_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="area_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="support_rack_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="sample_type_code" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="sample_type_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="sample_number" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="is_split" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="memo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="status" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="frozen_box_type_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="sample_type_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>
