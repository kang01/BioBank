<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity TranshipTube.
    -->
    <changeSet id="20170608012552-1" author="jhipster">
        <createTable tableName="tranship_tube" remarks="转运盒与冻存管关系表">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="nvarchar(20)" remarks="状态">
                <constraints nullable="false" />
            </column>

            <column name="memo" type="nvarchar(1024)" remarks="备注">
                <constraints nullable="true" />
            </column>

            <column name="columns_in_tube" type="nvarchar(20)" remarks="所在冻存管列号">
                <constraints nullable="false" />
            </column>

            <column name="rows_in_tube" type="nvarchar(20)" remarks="所在冻存管行号">
                <constraints nullable="false" />
            </column>

            <column name="tranship_box_id" type="bigint" remarks="转运盒ID">
                <constraints nullable="false" />
            </column>

            <column name="frozen_tube_id" type="bigint" remarks="冻存管ID">
                <constraints nullable="false" />
            </column>

            <column name="created_by" type="nvarchar(50)" remarks="创建人">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}" remarks="创建时间">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="nvarchar(50)" remarks="修改人"/>
            <column name="last_modified_date" type="timestamp" remarks="修改时间"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>
